@model  IEnumerable<UsingMongoDB.Models.Employee>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.ActionLink("Add Employee", "Create")
        <table border="1">
            <tr>
                <th>Employee Id</th>
                <th>Employee Name</th>
                <th colspan="2">&nbsp;</th>
            </tr>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @employee.EmployeeId
                    </td>
                    <td>
                        @employee.EmployeeName
                    </td>
                    <td>@Html.ActionLink("Edit", "Update", new { employeeId = employee.EmployeeId })</td>
                    <td>@Html.ActionLink("Remove", "Delete", new { employeeId = employee.EmployeeId })</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
